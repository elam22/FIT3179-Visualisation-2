{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average Area of Sites",
  "data": {
    "url": "data/processed/whc-sites-2019-processed.csv"
  },
  "width": 350,
  "height": 300,
  "transform": [
    {
      "filter": "datum.region != 'nan'"
    },
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "area_hectares",
          "as": "area"
        }
      ],
      "groupby": [
        "date_inscribed",
        "region"
      ]
    }
  ],
  "mark": {
    "type": "circle",
    "opacity": 0.8,
    "stroke": "black",
    "strokeWidth": 1
  },
  "encoding": {
    "x": {
      "field": "date_inscribed",
      "type": "temporal",
      "axis": {
        "grid": false,
        "title": " Construction Year",
        "labelAngle": "-90"
      }
    },
    "y": {
      "field": "region",
      "type": "nominal",
      "axis": {
        "title": "World Region"
      }
    },
    "size": {
      "field": "area",
      "type": "quantitative",
      "title": "Average Area of Sites (Hectares)",
      "legend": {
        "clipHeight": 70
      },
      "scale": {
        "rangeMax": 4000
      }
    },
    "color": {
      "field": "region",
      "type": "nominal",
      "legend": null,
      "scale": {
        "range": [
          "#BEB8EB",
          "#788BFF",
          "#0B5563",
          "#FCB07E",
          "#5E5C6C",
          "#832161",
          "#987284"
        ]
      }
    },
    "tooltip": [
      {
        "field": "date_inscribed",
        "type": "temporal",
        "title": "Year",
        "format": "%Y"
      },
      {
        "field": "region",
        "type": "nominal",
        "title": "Region"
      },
      {
        "field": "area",
        "type": "quantitative",
        "title": "Average Area (Hectares)",
        "format": "0.2f"
      }
    ]
  }
}