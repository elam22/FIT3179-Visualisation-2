{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World Heritage Sites by Country",
  "width": 500,
  "height": 300,
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "name": "line",
        "url": "data/ne_110m_graticules_30.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightgrey",
        "fill": "transparent"
      }
    },
    {
      "data": {
        "name": "world",
        "url": "data/world-110m.json",
        "format": {
          "type": "topojson",
          "feature": "countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "black"
      },
      "transform": [
        {
          "lookup": "id",
          "from": {
            "data": {
              "url": "data/processed/country_count_total.csv"
            },
            "key": "id",
            "fields": [
              "country_count",
              "name"
            ]
          }
        }
      ],
      "encoding": {
        "color": {
          "field": "country_count",
          "type": "quantitative",
          "title": "Number of Sites"
        },
        "tooltip": [
          {
            "field": "name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "country_count",
            "type": "quantitative",
            "title": "Number of Sites"
          }
        ]
      }
    }
  ]
}