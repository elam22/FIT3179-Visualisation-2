{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title":"World Heritage Sites by Region",
  "width": 500,
  "height": 300,
  "projection": {"type": "equalEarth"},
  "layer":[
    {
      "data": {
        "name": "line2",
        "url": "data/ne_110m_graticules_30.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "stroke": "lightgrey", "fill":"transparent"}
    },
    {
      "data": {
        "name": "line",
        "url": "data/continents.topojson",
        "format": {"type": "topojson", "feature":"continents"}
      },
    "mark": {"type": "geoshape", "stroke": "black"},
    "transform": [{
      "lookup": "id",
      "from": {
        "data": {
          "url": "data/processed/region_count_total.csv"
        },
        "key": "id",
        "fields": ["count", "name"]
      }
    }],
    "encoding": {
      "color": {
        "field": "count",
        "type": "quantitative",
        "title": "Number of Sites"
      },
    "tooltip": [{"field": "name", "type":"nominal","title":"Region"},{"field": "count", "type":"quantitative","title":"Number of Sites"}]
  }}]
}